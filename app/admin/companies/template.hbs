<div class="col-md-12">
    <div class="card">
        <div class="header">
            <h4 class="title">
                Kompanije
                {{modal-trigger modalId="companyModal" btn="btn-primary" img="fa-plus" text="Nova kompanija" class="pull-right" onTrigger="setupNewCompany"}}
            </h4>
            <p class="category"></p>
        </div>
        

        <div class="content">
            {{#if notDeleted.length}}
                <div class="table-responsive table-full-width">
                    <table class="table table-hover table-striped">
                        <thead data-table-id={{tableId}}>
                            <th></th>
                            {{#sortable-th key="name"}}
                                Ime
                            {{/sortable-th}}
                        </thead>
                        <tbody>
                            {{#each notDeleted as |company index|}}
        						<tr>
        						    <td>
	        						    {{#modal-trigger modalId="deleteCompanyModal" link=true onTrigger=(action "setCompany" company)}}
	                                        {{increment index}} <span class="fa fa-trash text-danger"></span>
	                                    {{/modal-trigger}}
                                    </td>
                                    <td>
                                        {{#modal-trigger modalId="companyModal" link=true onTrigger=(action "setCompany" company)}}
                                            {{company.name}}
                                        {{/modal-trigger}}
                                    </td>
        						</tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
            {{else}}
                <div class="row">
                    <div class="no-results">
                        <div class="text-danger">
                            Nije pronaÄ‘en nijedan rezultat
                        </div>
                    </div>
                </div>
            {{/if}}
        </div>
    </div>
</div>
{{confirm-delete-modal model=company type="Company" translation="ovu kompaniju"}}
{{company-modal company=company}}