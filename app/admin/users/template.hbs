
<div class="col-md-12">
    <div class="card">
        <div class="header">
            <h4 class="title">
                Korisnici
                {{modal-trigger modalId="userModal" btn="btn-primary" img="fa-plus" text="Novi korisnik" class="pull-right" onTrigger="setupNewUser"}}
            </h4>
            <p class="category"></p>
        </div>
        

        <div class="content">
            {{#if notDeleted.length}}
                <div class="table-responsive table-full-width">
                    <table class="table table-hover table-striped">
                        <thead data-table-id={{tableId}}>
                            <th></th>
                            {{#sortable-th key="name"}}
                                Ime
                            {{/sortable-th}}
                            {{#sortable-th key="phone"}}
                                Mobilni
                            {{/sortable-th}}
                            {{#sortable-th key="email"}}
                                Email
                            {{/sortable-th}}
                            {{#sortable-th key="username"}}
                                Username
                            {{/sortable-th}}
                            {{#sortable-th key="password"}}
                                Password
                            {{/sortable-th}}
                        </thead>
                        <tbody>
                            {{#each notDeleted as |user index|}}
        						<tr>
        						    <td>
	        						    {{#modal-trigger modalId="deleteUserModal" link=true onTrigger=(action "setUser" user)}}
	                                        {{increment index}} <span class="fa fa-trash text-danger"></span>
	                                    {{/modal-trigger}}
                                    </td>
                                    <td>
                                        {{#modal-trigger modalId="userModal" link=true onTrigger=(action "setUser" user)}}
                                            {{user.name}}
                                        {{/modal-trigger}}
                                    </td>
                                    <td>{{user.phone}}</td>
                                    <td>{{user.email}}</td>
                                    <td>{{user.username}}</td>
                                    <td>{{user.password}}</td>
        						</tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
            {{else}}
                <div class="row">
                    <div class="no-results">
                        <div class="text-danger">
                            Nije pronaÄ‘en nijedan rezultat
                        </div>
                    </div>
                </div>
            {{/if}}
        </div>
    </div>
</div>
{{confirm-delete-modal model=user type="User" translation="ovog korisnika"}}
{{user-modal companies=model.companies user=user}}
